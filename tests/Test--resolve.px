#!/usr/bin/env perl

use strict;
use warnings;
use POSIX;
use Socket;

use HTTPTest;


###############################################################################

# code, msg, headers, content
my %urls = (
    '/resolve' => {
        code => "200",
        msg => "Dontcare",
    },
);

my $resolved_host = "example.com";

my $localip = inet_ntoa(inet_aton("localhost"));
unless ($localip =~ "127.0.0.1")
{
    warn "Unexpected IP for localhost: $localip\n";
    exit 77;
}

my $cmdline = $WgetTest::WGETPATH . " --resolve $resolved_host:$localip"
    . " http://$resolved_host:{{port}}/resolve";

my $expected_error_code = 0;

my %expected_downloaded_files = (
);

###############################################################################

my $the_test = HTTPTest->new (input => \%urls,
                              cmdline => $cmdline,
                              errcode => $expected_error_code,
                              output => \%expected_downloaded_files);
exit $the_test->run();

